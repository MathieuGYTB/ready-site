{% extends "base.html.twig" %}
{% block title %}Contact{% endblock %}
{% block body %}
  <header>
    <!--Navbar-->
    <nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-secondary">
      <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('index')}}">Accueil</a>
        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarColor02">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor02">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="{{ path('commandez')}}">Achetez le {{ description }}</a>
            </li>
            <li class="nav-item">
              <a id="CGV" class="nav-link" href="{{ path('cgv')}}">Conditions générales de vente</a>
            </li>
            <li class="nav-item">
              <a id="RGPD" class="nav-link" aria-current="page" href="{{ path('rgpd')}}">Réglementation concernant les données personnelles</a>
            </li>
            <li class="nav-item">
              <a id="licence" class="nav-link" aria-current="page" href="{{ path('app_licence')}}">licence</a>
            </li>
            <li class="nav-item">
              <a id="contact" class="nav-link active" aria-current="page" href="{{ path('app_contact')}}">Contact</a>
            </li>
            <li className="nav-item">
              <a id="connecter" class="nav-link" aria-current="page" href="{{ path('register')}}">s'enregistrer</a>
            </li>
            <li class="nav-item">
              <a id="login" class="nav-link" aria-current="page" href="{{ path('app_login')}}">se connecter/se déconnecter</a>
            </li>
            <li class="nav-item">
              <a id="user" class="nav-link" aria-current="page" href="{{ path('app_user')}}">mon espace</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>
  <main>
    <section>
      {% for message in app.flashes('success') %}
        <div class="alert alert-success">
          {{ message }}
        </div>
      {% endfor %}
      {{ form_start(contactform) }}
        {{form_row(contactform.message)}}
        <input class="btn btn-primary" type="submit" />
      {{ form_end(contactform) }}
    </section>
  </main>
{% endblock %}