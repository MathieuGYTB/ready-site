{% extends 'base.html.twig' %}

{% block title %}Bonjour !{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <header>
    <!--Navbar-->
    <nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-secondary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Accueil</a>
        <div class="collapse navbar-collapse" id="navbarColor02">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="/profile/commandez">Achetez le pack de démarrage</a>
                </li>
                <li class="nav-item">
                    <a id="CGV" class="nav-link" href="/cgv">Conditions générales de vente</a>
                </li>
                <li class="nav-item">
                    <a id="RGPD" class="nav-link" aria-current="page" href="/rgpd">Réglementation concernant les données personnelles</a>
                </li>
                <li class="nav-item">
                    <a id="contact" class="nav-link" aria-current="page" href="/profile/contact">Contact</a>
                </li>
                <li class="nav-item">
                    <a id="connecter" class="nav-link" aria-current="page" href="/register">s'enregistrer</a>
                </li>
                <li class="nav-item">
                    <a id="login" class="nav-link" aria-current="page" href="/login">se connecter/se déconnecter</a>
                </li>
                <li class="nav-item">
                    <a id="user" class="nav-link active" aria-current="page" href="/profile/user">mon espace</a>
                </li>
            </ul>
            </div>
        </div>
        </nav>
    </header>
    <main>
        <section>
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            <div class="example-wrapper">
                <h1>Bonjour {{ user_firstname }} !</h1>
                <br/>
                <div class="text">votre adresse email a été vérifiée ✅</div>
                <br/>
                <h2>Vos données personnelles :</h2>
                <div class="text">{{ user_name }} {{ user_firstname }}</div>
                <div class="text">{{ user_address }}</div>
                <div class="text">{{ user_CP }}</div>
                <div class="text">{{ user_city }}</div>
                <div class="text">{{ user_pays }}</div>
                <div class="text">{{ user_email }}</div>
                <br/>
                <h2>Votre facture : </h2>
                <br/>
                
                {% if user_notice %}
                <h3>Facture N° {{ user_notice }}</h3>
                <br/>
                <h4>Client :</h4>
                <div class="text">{{ user_name }} {{ user_firstname }}</div>
                <div class="text">{{ user_email }}</div>
                <br/>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>date</th>
                            <th>designation</th>
                            <th>quantité</th>
                            <th>prix</th>
                            <th>monnaie</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td></td>
                            <td>{{ description }}</td>
                            <td>{{ quantity }}</td>
                            <td>{{ price }}</td>
                            <td>{{ money }}</td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3">total</td>
                            <td>{{ price }}</td>
                            <td>{{ money }}</td>
                        </tr>
                        <tr>
                            <td colspan="3">payé</td>
                            <td>{{ price }}</td>
                            <td>{{ money }}</td>
                        </tr>
                    </tfoot>
                </table>
                <br/>
                <div class="text">TVA non applicable, ART.293B du CGI</div>
                <br/>
                <div class="text">{{ admin_company}}, N° de siret: {{ admin_siret}}, code APE: {{ admin_code_APE }}, {{ admin_name }}, {{ admin_address}}, email: {{ admin_email }}, tel: {{ admin_telephone }}</div>
                <div></div>
                {% else %}
                    <div class="text">Vous n'avez pas de facture.</div>
                {% endif %}
        </section>
    <main>
{% endblock %}
